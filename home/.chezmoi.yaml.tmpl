{{- /* https://www.chezmoi.io/reference/configuration-file/variables/ */ -}}
{{- /* https://masterminds.github.io/sprig/ */ -}}

{{- /* checks if we want to get basic binaries only */ -}}
{{- $basic_bins := (env "DOTFILES_BASIC_BINS" | ne "") -}}

{{- /* git user name */ -}}
{{- $git_username := env "GIT_USERNAME" -}}
{{- if eq $git_username "" -}}
{{-   $git_username = "Kiba Amor" -}}
{{- end -}}

{{- /* git user email */ -}}
{{- $git_useremail := env "GIT_USEREMAIL" -}}
{{- if eq $git_useremail "" -}}
{{-   $git_useremail = "5093911+kibaamor@users.noreply.github.com" -}}
{{- end -}}

{{- /* is personal workstation */ -}}
{{- $personal := (or (contains "ubisoft" .chezmoi.fqdnHostname) (contains "-WKS-" .chezmoi.fqdnHostname)) | not -}}

{{- /* checks if running interactively */ -}}
{{- $interactive := and
      stdinIsATTY
      (env "ACT" | not)
      (env "CODESPACES" | not)
      (env "DEBIAN_FRONTEND" | ne "noninteractive") -}}

{{- /* we can execute sudo command or not */ -}}
{{- $can_sudo := or $interactive (env "CODESPACES") -}}

{{- /* find sudo command */ -}}
{{- $sudo := findExecutable "sudo" (list "/bin" "/sbin" "/usr/bin" "/usr/sbin") -}}

format: yaml

data:
  basic_bins: {{ $basic_bins }}

  git_username: {{ $git_username }}
  git_useremail: {{ $git_useremail }}

  personal: {{ $personal }}

  interactive: {{ $interactive }}
{{ if ne .chezmoi.os "windows" }}
  can_sudo: {{ $can_sudo }}
  sudo: {{ $sudo }}
{{ end }}

{{ if eq .chezmoi.os "windows" }}
  uname_arch: "x86_64"
  pkg_postfix: ".zip"
  exe_ext: ".exe"
{{ else }}
  uname_arch: "{{ output "uname" "-m" | trim }}"
  pkg_postfix: ".tar.gz"
  exe_ext: ""
{{ end }}

{{ if eq .chezmoi.os "windows" }}
  platform: "pc"
  pkg_runtime: "-msvc"
{{ else if eq .chezmoi.os "darwin" }}
  platform: "apple"
  pkg_runtime: ""
{{ else }}
  platform: "unknown"
  pkg_runtime: "-musl"
{{ end }}
