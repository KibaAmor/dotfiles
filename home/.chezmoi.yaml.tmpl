{{- /* https://www.chezmoi.io/reference/configuration-file/variables/ */ -}}
{{- /* https://masterminds.github.io/sprig/ */ -}}

{{- /* is personal workstation */ -}}
{{- $personal := (or (contains "ubisoft" .chezmoi.fqdnHostname) (contains "-WKS-" .chezmoi.fqdnHostname)) | not -}}

{{- /* checks if running interactively */ -}}
{{- $interactive := and
  stdinIsATTY
  (env "ACT" | not)
  (env "CODESPACES" | not)
  (env "DEBIAN_FRONTEND" | ne "noninteractive") -}}

{{- /* we can execute sudo command or not */ -}}
{{- $can_sudo := or $interactive (env "CODESPACES") -}}

{{- /* find sudo command */ -}}
{{- $sudo := findExecutable "sudo" (list "/bin" "/sbin" "/usr/bin" "/usr/sbin") -}}

{{- /* checks if we want to get all resources */ -}}
{{- $get_all_resources := (env "CHEZMOI_GET_ALL_RESOURCES" | ne "") -}}

format: yaml

data:
  get_all_resources: {{ $get_all_resources }}

  personal: {{ $personal }}

  interactive: {{ $interactive }}
{{ if ne .chezmoi.os "windows" }}
  can_sudo: {{ $can_sudo }}
  sudo: {{ $sudo }}
{{ end }}

{{ if eq .chezmoi.os "windows" }}
  uname_arch: "x86_64"
  pkg_postfix: ".zip"
  exe_ext: ".exe"
{{ else }}
  uname_arch: "{{ output "uname" "-m" | trim }}"
  pkg_postfix: ".tar.gz"
  exe_ext: ""
{{ end }}

{{ if eq .chezmoi.os "windows" }}
  platform: "pc"
  pkg_runtime: "-msvc"
{{ else if eq .chezmoi.os "darwin" }}
  platform: "apple"
  pkg_runtime: ""
{{ else }}
  platform: "unknown"
  pkg_runtime: "-musl"
{{ end }}
