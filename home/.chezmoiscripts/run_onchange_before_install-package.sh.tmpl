    (eq .chezmoi.osRelease.id "ubuntu")
    (eq .chezmoi.osRelease.id "debian")
    -}}

#!/bin/su root
# !!!!make sure that we are root

set -eu \
    && export DEBIAN_FRONTEND=noninteractive \
    && apt update \
    && apt install --yes {{ .packages.debian }} \
    && rm -rf /var/lib/apt/lists/*

{{ end -}}
