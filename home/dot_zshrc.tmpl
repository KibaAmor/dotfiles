export GOPROXY=https://artifactory.ubisoft.org/artifactory/go,https://goproxy.io,direct
export GOPRIVATE="*.ubisoft.org,*.ubi.com"

export EDITOR=vim

alias kubectl="kubecolor"
alias kc="kubectl"
alias kca="kubectl apply"
alias kcd="kubectl delete"
